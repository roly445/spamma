@page "/account/api-keys"
@layout AccountSettingsLayout

<PageTitle>API Keys - Spamma</PageTitle>

<div class="bg-white border border-gray-200 rounded-lg shadow-sm">
    <div class="px-6 py-5 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-lg font-medium text-gray-900">API Keys</h2>
                <p class="text-sm text-gray-500">Manage your API keys for accessing Spamma's public API.</p>
            </div>
        </div>
    </div>
    <div class="px-6 py-5">
        <div>

            <!-- Create API Key CTA (opens modal) -->
            <div class="mb-6 flex items-center justify-between">
                <div>
                    <h3 class="text-sm font-semibold text-gray-900">Create New API Key</h3>
                    <p class="text-xs text-gray-500">Choose a descriptive name when creating your key.</p>
                </div>
                <div>
                    <button @onclick="OpenCreateModal" class="inline-flex items-center px-4 py-2 rounded-md text-sm text-white bg-blue-600 hover:bg-blue-700">
                        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Create API Key
                    </button>
                </div>
            </div>

            <!-- Create API Key Modal -->
    

            <!-- API Keys List Section -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Your API Keys</h2>

                @if (isLoadingKeys)
                {
                    <div class="flex items-center justify-center py-8">
                        <svg class="animate-spin h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                        </svg>
                        <span class="ml-2 text-gray-500">Loading API keys...</span>
                    </div>
                }
                else if (apiKeys.Count == 0)
                {
                    <div class="text-center py-8">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-gray-900">No API keys</h3>
                        <p class="mt-1 text-sm text-gray-500">Get started by creating your first API key above.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        @foreach (var apiKey in apiKeys.OrderByDescending(k => k.CreatedAt))
                        {
                            <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg @(apiKey.IsRevoked ? "bg-gray-50" : "bg-white")">
                                <div class="flex-1">
                                    <div class="flex items-center">
                                        <h3 class="text-sm font-medium text-gray-900">@apiKey.Name</h3>
                                        @if (apiKey.IsRevoked)
                                        {
                                            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                Revoked
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                Active
                                            </span>
                                        }
                                    </div>
                                    <div class="mt-1 text-sm text-gray-500">
                                        Created @apiKey.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                        @if (apiKey.IsRevoked && apiKey.RevokedAt.HasValue)
                                        {
                                            <span>• Revoked @apiKey.RevokedAt.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                        }
                                    </div>
                                </div>
                                @if (!apiKey.IsRevoked)
                                {
                                    <div class="ml-4">
                                        <button @onclick="() => HandleRevokeApiKey(apiKey.Id)"
                                                disabled="@isRevoking"
                                                class="inline-flex items-center px-3 py-1.5 rounded-md text-sm text-red-700 bg-red-100 hover:bg-red-200 disabled:opacity-50">
                                            @if (isRevoking)
                                            {
                                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-red-700" fill="none" viewBox="0 0 24 24">
                                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                                                </svg>
                                                <span>Revoking…</span>
                                            }
                                            else
                                            {
                                                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                <span>Revoke</span>
                                            }
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Show Created Key (only displayed once) -->
            @if (!string.IsNullOrEmpty(createdKeyValue))
            {
                <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-green-800">API Key Created Successfully</h3>
                            <div class="mt-2 text-sm text-green-700">
                                <p>Your new API key has been created. <strong>Copy this key now - it will not be shown again.</strong></p>
                                <div class="mt-3 p-3 bg-white rounded border font-mono text-sm break-all">
                                    @createdKeyValue
                                </div>
                                <button @onclick="CopyToClipboard"
                                        class="mt-2 inline-flex items-center px-3 py-1 rounded-md text-sm text-green-700 bg-green-100 hover:bg-green-200">
                                    <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                    </svg>
                                    Copy
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<ModalBase IsVisible="@showCreateModal" OnClose="CloseCreateModal" AllowBackdropClose="false" WidthClass="sm:max-w-md" AriaLabelledBy="create-api-key-title">
        <div class="border-b border-gray-200 bg-gray-50 px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
                <h3 id="create-api-key-title" class="text-lg font-medium text-gray-900">Create API Key</h3>
                <button @onclick="CloseCreateModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>

        <EditForm Model="@createModel" OnValidSubmit="@HandleCreateApiKey">
            <DataAnnotationsValidator />

            <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
                <div class="space-y-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Key Name</label>
                        <input id="name" @ref="nameInputRef" @bind="createModel.Name" @bind:event="oninput" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="e.g., Production Integration" />
                        <ValidationMessage For="@(() => createModel.Name)" class="mt-1 text-sm text-red-600" />
                    </div>
                </div>
            </div>

            <div class="flex space-x-3 border-t border-gray-200 px-4 py-4 sm:px-6">
                <button type="submit" disabled="@isCreating" class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 disabled:opacity-50">
                    @if (isCreating)
                    {
                        <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                        </svg>
                        <span>Creating…</span>
                    }
                    else
                    {
                        <span>Create</span>
                    }
                </button>
                <button type="button" @onclick="CloseCreateModal" class="flex-1 rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700">Cancel</button>
            </div>
        </EditForm>
    </ModalBase>