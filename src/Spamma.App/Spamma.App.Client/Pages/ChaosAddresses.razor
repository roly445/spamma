@page "/chaos-addresses"
@using Spamma.Modules.Common.Client.Infrastructure.Constants
@layout AppLayout
@attribute [Authorize(Policy = Lookups.CanModerateChaosAddresses)]

<PageTitle>Chaos Addresses - Spamma</PageTitle>

<div class="min-h-screen bg-gray-50">
    <AdminHeader Title="Chaos Addresses" Subtitle="Test email handling by simulating SMTP errors">
        <Controls>
            <button @onclick="OpenCreate" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Create Chaos Address
            </button>
        </Controls>
    </AdminHeader>
 
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
            <EditForm Model="@searchRequest" OnSubmit="@LoadChaosAddresses" FormName="ChaosAddressSearchForm">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
                        <InputText @bind-Value="searchRequest.SearchTerm"
                                   placeholder="Search by email address..."
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Subdomain</label>
                        <InputSelect @bind-Value="searchRequest.SubdomainIdFilter"
                                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">All Subdomains</option>
                            @if (subdomainsByDomain != null)
                            {
                                @foreach (var domainGroup in subdomainsByDomain)
                                {
                                    <optgroup label="@domainGroup.Key">
                                        @foreach (var subdomain in domainGroup.Value)
                                        {
                                            <option value="@subdomain.Id">@subdomain.SubdomainName.@domainGroup.Key</option>
                                        }
                                    </optgroup>
                                }
                            }
                        </InputSelect>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                        <InputSelect @bind-Value="searchRequest.EnabledFilter"
                                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">All Statuses</option>
                            <option value="enabled">Enabled</option>
                            <option value="disabled">Disabled</option>
                        </InputSelect>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
                        <InputSelect @bind-Value="searchRequest.SortBy"
                                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="CreatedAt">Created Date</option>
                            <option value="LocalPart">Email Address</option>
                            <option value="Enabled">Status</option>
                            <option value="TotalReceived">Received Count</option>
                            <option value="LastReceivedAt">Last Received</option>
                        </InputSelect>
                    </div>
                    <div class="flex items-end">
                        <button type="submit"
                                class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                            Search
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>

        @if (isLoading)
        {
            <div class="flex items-center justify-center py-16">
                <svg class="animate-spin h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </div>
        }
        else
        {
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                @if (!isInitialized)
                {
                    <div class="text-center py-8">
                        <svg class="animate-spin h-6 w-6 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                        </svg>
                    </div>
                }
                else if (isLoading)
                {
                    <div class="text-center py-8">
                        <svg class="animate-spin h-6 w-6 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                        </svg>
                    </div>
                }
                else if (chaosAddresses == null || chaosAddresses.Count == 0)
                {
                    <div class="text-center py-8 text-gray-500">
                        <p>No chaos addresses yet. Create one to get started.</p>
                    </div>
                }
                else
                {
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                            <thead class="border-b border-gray-200">
                            <tr>
                                <th class="text-left py-2 px-3 font-medium">Email Address</th>
                                <th class="text-left py-2 px-3 font-medium">Status</th>
                                <th class="text-left py-2 px-3 font-medium">SMTP Code</th>
                                <th class="text-left py-2 px-3 font-medium">Received</th>
                                <th class="text-left py-2 px-3 font-medium">Last Received</th>
                                <th class="text-left py-2 px-3 font-medium">Created</th>
                                <th class="text-center py-2 px-3 font-medium">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var chaos in chaosAddresses)
                            {
                                var isImmutable = chaos.TotalReceived > 0;
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="py-3 px-3">
                                        <span class="font-mono text-xs">@($"{chaos.LocalPart}@{GetSubdomainDisplayName(chaos.SubdomainId)}")</span>
                                        @if (isImmutable)
                                        {
                                            <span class="inline-block ml-2 px-2 py-0.5 bg-orange-100 text-orange-700 text-xs rounded" title="This address is immutable after receiving its first email">Immutable</span>
                                        }
                                    </td>
                                    <td class="py-3 px-3">
                                        <span class="@(chaos.Enabled ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800") px-2 py-1 rounded text-xs font-medium">
                                            @(chaos.Enabled ? "Enabled" : "Disabled")
                                        </span>
                                    </td>
                                    <td class="py-3 px-3 font-mono text-xs">@chaos.ConfiguredSmtpCode</td>
                                    <td class="py-3 px-3">@chaos.TotalReceived</td>
                                    <td class="py-3 px-3">
                                        @if (chaos.LastReceivedAt.HasValue)
                                        {
                                            <span title="@chaos.LastReceivedAt.Value.ToString("u")">@chaos.LastReceivedAt.Value.ToString("yyyy-MM-dd HH:mm") UTC</span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">Never received</span>
                                        }
                                    </td>
                                    <td class="py-3 px-3 text-xs">@chaos.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td class="py-3 px-3 text-center space-x-1">

                                        <button
                                            class="px-2 py-1 text-xs @(chaos.Enabled ? "bg-red-100 text-red-600 hover:bg-red-200" : "bg-green-100 text-green-600 hover:bg-green-200") rounded"
                                            @onclick="() => ToggleChaosAddress(chaos.ChaosAddressId, !chaos.Enabled)"
                                            title="@(chaos.Enabled ? "Disable" : "Enable")">
                                            @(chaos.Enabled ? "Disable" : "Enable")
                                        </button>
                                        @if (!isImmutable)
                                        {
                                            <button class="px-2 py-1 text-xs bg-gray-100 text-gray-600 hover:bg-gray-200 rounded" @onclick="() => DeleteChaosAddress(chaos.ChaosAddressId)" title="Delete">Delete</button>
                                        }
                                        else
                                        {
                                            <span class="px-2 py-1 text-xs text-gray-400 cursor-help" title="Immutable after first receive - editing not allowed">â€”</span>
                                        }


                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }

            </div>
        }
    </div>
</div>

<ModalBase IsVisible="@showModal" OnClose="CloseCreate" AllowBackdropClose="true" WidthClass="sm:max-w-md" AriaLabelledBy="create-chaos-title">
    <div class="bg-white rounded-lg shadow-xl w-full max-h-screen overflow-y-auto" @onclick:stopPropagation="true">
        <!-- Modal Header -->
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h3 id="create-chaos-title" class="text-lg font-medium text-gray-900">Create Chaos Address</h3>
                <button @onclick="CloseCreate" class="text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Modal Body -->
        <div class="px-6 py-4">
            
            <EditForm Model="@model" OnValidSubmit="@HandleCreate" FormName="CreateChaosAddressForm">
                    <DataAnnotationsValidator />

                    <div class="space-y-6">
                        <!-- Subdomain Selection -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Subdomain <span class="text-red-500">*</span>
                            </label>
                            <select @bind="model.SubdomainIdString" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="">-- Select a subdomain --</option>
                                @if (subdomainsByDomain != null)
                                {
                                    @foreach (var domainGroup in subdomainsByDomain)
                                    {
                                        <optgroup label="@domainGroup.Key">
                                            @foreach (var subdomain in domainGroup.Value)
                                            {
                                                <option value="@subdomain.Id">@subdomain.SubdomainName.@domainGroup.Key</option>
                                            }
                                        </optgroup>
                                    }
                                }
                            </select>
                            @if (model.SubdomainId == Guid.Empty)
                            {
                                <p class="mt-1 text-sm text-red-600">Please select a subdomain</p>
                            }
                            <p class="mt-1 text-xs text-gray-500">Choose which subdomain this chaos address belongs to</p>
                        </div>

                        <!-- Email Address Input with Preview -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Email Address <span class="text-red-500">*</span>
                            </label>
                            <div class="flex items-center">
                                <div class="mt-2">
                                    <label class="block text-sm font-medium text-gray-700">Local part</label>
                                    <div class="mt-1 flex rounded-md shadow-sm">
                                        <InputText id="edit-localpart" class="flex-1 block w-full rounded-l-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" @bind-Value="model.LocalPart" />
                                        <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-sm text-gray-600">@GetSubdomainDisplayName(model!.SubdomainId)</span>
                                    </div>
                                </div>
                            </div>
                            <ValidationMessage For="@(() => model.LocalPart)" class="mt-1 text-sm text-red-600" />
                            <p class="mt-1 text-xs text-gray-500">Enter the local part (prefix) of the email address</p>
                        </div>

                        <!-- SMTP Code Dropdown -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                SMTP Error Code <span class="text-red-500">*</span>
                            </label>
                            <select @bind="model.SmtpCode" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="">-- Select an SMTP code --</option>
                                @foreach (var smtpCode in GetSmtpCodes())
                                {
                                    <option value="@((int)smtpCode)">@smtpCode.ToString() (@GetSmtpDescription(smtpCode))</option>
                                }
                            </select>
                            @if (model.SmtpCode == 0)
                            {
                                <p class="mt-1 text-sm text-red-600">Please select an SMTP error code</p>
                            }
                            <p class="mt-1 text-xs text-gray-500">The SMTP error code returned when this address receives mail</p>
                        </div>

                        <!-- Description (Optional) -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Description (Optional)</label>
                            <InputTextArea @bind-Value="model.Description" 
                                         placeholder="e.g., Testing bounce handling"
                                         class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                         rows="3" />
                            <ValidationMessage For="@(() => model.Description)" class="mt-1 text-sm text-red-600" />
                        </div>

                        <!-- Info Box -->
                        <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div class="ml-3 flex-1">
                                    <p class="text-sm text-blue-700">
                                        This chaos address will be created in a <strong>disabled</strong> state. Enable it when ready to start testing.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="mt-6 flex justify-end space-x-3">
                        <button type="button" @onclick="CloseCreate" 
                               class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Cancel
                        </button>
                        <button type="submit" 
                               disabled="@isCreating"
                               class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                            @if (isCreating)
                            {
                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Creating...</span>
                            }
                            else
                            {
                                <span>Create Chaos Address</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
</ModalBase>

@if (showSuspendConfirm && suspendConfirmData != null)
{
    <ConfirmModal IsVisible="@showSuspendConfirm"
                  OnClose="CloseSuspendConfirm"
                  OnConfirm="ConfirmDisable"
                  AllowBackdropClose="false"
                  WidthClass="sm:max-w-md"
                  AriaLabelledBy="suspend-confirm-title"
                  Title="Disable Chaos Address"
                  Subtitle="@suspendConfirmData.LocalPart"
                  Variant="danger"
                  IsProcessing="@isSuspendProcessing"
                  ConfirmLabel="Disable Address"
                  CancelLabel="Cancel">

        <div class="mb-4">
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.736 0L3.077 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">This will:</h3>
                        <ul class="mt-2 text-sm text-red-700 list-disc list-inside space-y-1">
                            <li>Prevent receiving new emails for this address</li>
                            <li>Keep the address and its history available</li>
                            <li>Allow re-enabling later if needed</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </ConfirmModal>
}

@if (showEnableConfirm && enableConfirmData != null)
{
    <ConfirmModal IsVisible="@showEnableConfirm"
                  OnClose="CloseEnableConfirm"
                  OnConfirm="ConfirmEnable"
                  AllowBackdropClose="true"
                  WidthClass="sm:max-w-md"
                  AriaLabelledBy="enable-confirm-title"
                  Title="Enable Chaos Address"
                  Subtitle="@enableConfirmData.LocalPart"
                  Variant="success"
                  IsProcessing="@isEnableProcessing"
                  ConfirmLabel="Enable Address"
                  CancelLabel="Cancel">

        <div class="mb-4">
            <div class="bg-green-50 border border-green-200 rounded-md p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-green-800">This will:</h3>
                        <ul class="mt-2 text-sm text-green-700 list-disc list-inside space-y-1">
                            <li>Resume receiving emails for this address</li>
                            <li>Apply the configured SMTP error code</li>
                            <li>Track all incoming test emails</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </ConfirmModal>
}

@if (showDeleteConfirm && deleteConfirmData != null)
{
    <ConfirmModal IsVisible="@showDeleteConfirm"
                  OnClose="CloseDeleteConfirm"
                  OnConfirm="ConfirmDelete"
                  AllowBackdropClose="false"
                  WidthClass="sm:max-w-md"
                  AriaLabelledBy="delete-confirm-title"
                  Title="Delete Chaos Address"
                  Subtitle="@deleteConfirmData.LocalPart"
                  Variant="danger"
                  IsProcessing="@isDeleteProcessing"
                  ConfirmLabel="Delete Address"
                  CancelLabel="Cancel">

        <div class="mb-4">
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.736 0L3.077 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">This action:</h3>
                        <ul class="mt-2 text-sm text-red-700 list-disc list-inside space-y-1">
                            <li>Permanently removes this chaos address</li>
                            <li>Deletes all associated email history</li>
                            <li>Cannot be undone</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </ConfirmModal>
}
