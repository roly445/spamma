@page "/campaigns"
@using Spamma.App.Client.Layout
@layout AppLayout

@attribute [Authorize]

<PageTitle>Email Campaigns - Spamma</PageTitle>

<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Email Campaigns</h1>
                        <p class="mt-1 text-sm text-gray-500">Track and analyze email campaigns by x-spamma-camp header</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Filters -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Subdomain</label>
                    <select value="@_selectedSubdomainId" @onchange="OnSubdomainChanged"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">-- Select Subdomain --</option>
                        @if (_subdomains != null)
                        {
                            @foreach (var subdomain in _subdomains)
                            {
                                <option value="@subdomain.Id">@subdomain.SubdomainName</option>
                            }
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
                    <select value="@_sortBy" @onchange="OnSortChanged"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="LastReceivedAt">Last Received</option>
                        <option value="TotalCaptured">Total Captured</option>
                        <option value="FirstReceivedAt">First Received</option>
                        <option value="CampaignValue">Campaign Name</option>
                    </select>
                </div>
                <div class="flex items-end">
                    <button @onclick="RefreshCampaigns" 
                            class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Refresh
                    </button>
                </div>
            </div>
        </div>

        <!-- Campaigns List -->
        @if (_isLoading)
        {
            <div class="text-center py-12">
                <div class="inline-flex items-center space-x-2">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
                    <span class="text-gray-600">Loading campaigns...</span>
                </div>
            </div>
        }
        else if (_campaigns != null && _campaigns.Items.Count == 0)
        {
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-1">No campaigns found</h3>
                <p class="text-gray-500">Select a subdomain or send emails with the x-spamma-camp header to get started</p>
            </div>
        }
        else if (_campaigns != null)
        {
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Campaign</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Captured</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">First Received</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Received</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var campaign in _campaigns.Items)
                        {
                            <tr class="@(_deletingCampaignValue == campaign.CampaignValue ? "opacity-50 bg-gray-100" : "hover:bg-gray-50")">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    @if (_deletingCampaignValue == campaign.CampaignValue)
                                    {
                                        <div class="flex items-center space-x-2">
                                            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-gray-600"></div>
                                            <span>@campaign.CampaignValue</span>
                                        </div>
                                    }
                                    else
                                    {
                                        @campaign.CampaignValue
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    @campaign.TotalCaptured
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    @campaign.FirstReceivedAt.ToString("g")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    @campaign.LastReceivedAt.ToString("g")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                    <a href="/campaigns/@campaign.CampaignId"
                                       class="text-blue-600 hover:text-blue-900 font-medium @(_deletingCampaignValue == campaign.CampaignValue ? "pointer-events-none opacity-50" : "")">
                                        View Details
                                    </a>
                                    <button @onclick="() => DeleteCampaign(campaign.CampaignId, campaign.CampaignValue)"
                                            disabled="@(_deletingCampaignValue != null)"
                                            class="text-red-600 hover:text-red-900 font-medium @(_deletingCampaignValue != null ? "opacity-50 cursor-not-allowed" : "")">
                                        @if (_deletingCampaignValue == campaign.CampaignValue)
                                        {
                                            <span>Deleting...</span>
                                        }
                                        else
                                        {
                                            <span>Delete</span>
                                        }
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination -->
                @if (_campaigns.TotalPages > 1)
                {
                    <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between">
                        <div class="text-sm text-gray-600">
                            Showing @((_currentPage - 1) * _pageSize + 1) to @Math.Min(_currentPage * _pageSize, _campaigns.TotalCount) of @_campaigns.TotalCount campaigns
                        </div>
                        <div class="flex space-x-2">
                            <button @onclick="PreviousPage" 
                                    disabled="@(_currentPage == 1)"
                                    class="px-3 py-1 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                Previous
                            </button>
                            @for (int i = 1; i <= _campaigns.TotalPages && i <= 5; i++)
                            {
                                int pageNum = i;
                                <button @onclick="() => GoToPage(pageNum)"
                                        class="@(_currentPage == pageNum ? "bg-blue-600 text-white" : "bg-white text-gray-700 hover:bg-gray-50") px-3 py-1 border border-gray-300 rounded-md text-sm font-medium">
                                    @pageNum
                                </button>
                            }
                            <button @onclick="NextPage"
                                    disabled="@(_currentPage == _campaigns.TotalPages)"
                                    class="px-3 py-1 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                Next
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
