<!-- Edit Slide-Out Panel -->
@if (showEditSlideout && editChaosAddress != null)
{
    <div class="fixed inset-0 overflow-hidden z-40">
        <!-- Backdrop -->
        <div class="absolute inset-0 bg-gray-500 bg-opacity-75 transition-opacity" @onclick="CloseEditSlideout"></div>
        
        <!-- Slide-out Container -->
        <div class="pointer-events-none fixed inset-y-0 right-0 flex max-w-full pl-10">
            <!-- Actual Panel (pointer-events-auto to capture clicks inside only) -->
            <div id="chaos-edit-panel" class="pointer-events-auto w-screen max-w-md transform transition ease-in-out duration-300 @(showEditSlideout ? "translate-x-0" : "translate-x-full")">
                <div class="flex h-full flex-col overflow-y-scroll bg-white shadow-xl">
                    <!-- Header -->
                    <div class="flex items-center justify-between bg-blue-600 px-4 py-6 sm:px-6">
                        <h2 class="text-lg font-medium text-white">Edit Chaos Address</h2>
                        <button type="button" @onclick="CloseEditSlideout" class="text-blue-200 hover:text-white">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>

                    <!-- Content -->
                    <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
                        <div class="space-y-6">
                            <!-- Email Address Display/Edit -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                                @if (editChaosAddress.TotalReceived > 0)
                                {
                                    <div class="px-3 py-2 bg-gray-50 border border-gray-300 rounded-md">
                                        <span class="font-mono text-sm text-gray-900">@editChaosAddress.LocalPart</span>
                                    </div>
                                    <p class="mt-1 text-xs text-gray-500">Immutable - cannot be changed</p>
                                }
                                else
                                {
                                    <div class="mt-2">
                                        <label class="block text-sm font-medium text-gray-700">Local part</label>
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            <InputText id="edit-localpart-slideout" class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm" @bind-Value="editLocalPart" @onclick:stopPropagation="true" />
                                            <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-sm text-gray-600">@GetSubdomainDisplayName(editChaosAddress.SubdomainId)</span>
                                        </div>
                                    </div>
                                    <!-- Allow editing the subdomain before first receive -->
                                    <div class="mt-4">
                                        <label class="block text-sm font-medium text-gray-700">Subdomain</label>
                                        <select @bind="editSubdomainIdString" @onclick:stopPropagation="true" class="w-full mt-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm">
                                            <option value="">-- Select a subdomain --</option>
                                            @if (subdomainsByDomain != null)
                                            {
                                                @foreach (var domainGroup in subdomainsByDomain)
                                                {
                                                    <optgroup label="@domainGroup.Key">
                                                        @foreach (var subdomain in domainGroup.Value)
                                                        {
                                                            <option value="@subdomain.Id">@subdomain.SubdomainName.@domainGroup.Key</option>
                                                        }
                                                    </optgroup>
                                                }
                                            }
                                        </select>
                                        <p class="mt-1 text-xs text-gray-500">Change which subdomain this address belongs to (allowed only before the first received email).</p>
                                    </div>
                                    <p class="mt-1 text-xs text-gray-500">Can be edited before receiving emails</p>
                                }
                            </div>

                            <!-- SMTP Code Display/Edit -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">SMTP Error Code</label>
                                @if (editChaosAddress.TotalReceived > 0)
                                {
                                    <div class="px-3 py-2 bg-gray-50 border border-gray-300 rounded-md">
                                        <span class="font-mono text-sm text-gray-900">@editChaosAddress.ConfiguredSmtpCode</span>
                                    </div>
                                    <p class="mt-1 text-xs text-gray-500">Immutable - cannot be changed</p>
                                }
                                else
                                {
                                    <select @bind="editSmtpCodeString" 
                                            @onclick:stopPropagation="true"
                                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                        <option value="">Select SMTP Code...</option>
                                        @foreach (var smtpCode in GetSmtpCodes())
                                        {
                                            <option value="@((int)smtpCode)">@smtpCode.ToString() (@GetSmtpDescription(smtpCode))</option>
                                        }
                                    </select>
                                    <p class="mt-1 text-xs text-gray-500">Can be edited before receiving emails</p>
                                }
                            </div>

                            <!-- Status -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                                <div class="flex items-center space-x-4">
                                    <span class="@(editChaosAddress.Enabled ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800") px-3 py-1 rounded-full text-sm font-medium">
                                        @(editChaosAddress.Enabled ? "Enabled" : "Disabled")
                                    </span>
                                    <button type="button" 
                                            @onclick="() => ToggleChaosAddress(editChaosAddress.Id, !editChaosAddress.Enabled)"
                                            class="text-sm font-medium @(editChaosAddress.Enabled ? "text-red-600 hover:text-red-700" : "text-green-600 hover:text-green-700")">
                                        @(editChaosAddress.Enabled ? "Disable" : "Enable")
                                    </button>
                                </div>
                            </div>

                            <!-- Description -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                                <textarea class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                         placeholder="Optional notes about this chaos address..."
                                         rows="4"
                                         @onclick:stopPropagation="true"
                                         @onchange="@((ChangeEventArgs e) => editDescription = e.Value?.ToString() ?? string.Empty)">@editDescription</textarea>
                                <p class="mt-1 text-xs text-gray-500">For your reference only</p>
                            </div>

                            <!-- Statistics -->
                            <div class="pt-4 border-t border-gray-200">
                                <h3 class="text-sm font-medium text-gray-900 mb-3">Statistics</h3>
                                <div class="space-y-2">
                                    <div class="flex justify-between text-sm">
                                        <span class="text-gray-600">Total Received:</span>
                                        <span class="font-medium text-gray-900">@editChaosAddress.TotalReceived</span>
                                    </div>
                                    <div class="flex justify-between text-sm">
                                        <span class="text-gray-600">Last Received:</span>
                                        <span class="font-medium text-gray-900">
                                            @if (editChaosAddress.LastReceivedAt.HasValue)
                                            {
                                                <span>@editChaosAddress.LastReceivedAt.Value.ToString("yyyy-MM-dd HH:mm:ss") UTC</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">Never</span>
                                            }
                                        </span>
                                    </div>
                                    <div class="flex justify-between text-sm">
                                        <span class="text-gray-600">Created:</span>
                                        <span class="font-medium text-gray-900">@editChaosAddress.CreatedAt.ToString("yyyy-MM-dd")</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Info Box -->
                            @if (editChaosAddress.TotalReceived > 0)
                            {
                                <div class="bg-orange-50 border border-orange-200 rounded-md p-3">
                                    <div class="flex">
                                        <div class="flex-shrink-0">
                                            <svg class="h-5 w-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.736 0L3.077 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                            </svg>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm text-orange-700">
                                                This address is immutable - email address, subdomain, and SMTP code cannot be modified after receiving emails.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Footer Actions -->
                    <div class="flex space-x-3 border-t border-gray-200 px-4 py-4 sm:px-6">
                        <button type="button"
                                @onclick="CloseEditSlideout"
                                class="flex-1 rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                            Close
                        </button>
                        <button type="button"
                                @onclick="SaveEditChanges"
                                disabled="@isEditSaving"
                                class="flex-1 inline-flex justify-center items-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed">
                            @if (isEditSaving)
                            {
                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save Changes</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
