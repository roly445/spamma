@page "/admin/subdomains/{id:guid}"
@page "/admin/domains/{domainId:guid}/subdomains/{id:guid}"
@using Spamma.App.Client.Components.UserControls
@using Spamma.App.Client.Components.UserControls.Subdomain
@using Spamma.App.Client.Infrastructure.Helpers
@using Spamma.App.Client.Layout
@using Spamma.Modules.DomainManagement.Client.Contracts
@layout AppLayout
@attribute [Authorize]
<PageTitle>Subdomain Details - Spamma Admin</PageTitle>

<div class="min-h-screen bg-gray-50">

    
    <AdminHeader Title="Subdomain Details">
        <Controls>
            @if (DomainId == Guid.Empty)
            {
                <button @onclick="GoBack" class="p-2 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100 flex flex-row gap-1.5" title="Back">
                    <svg class="w-5 h-5 fill-none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    Back to Subdomains
                </button>
            }
        </Controls>

    </AdminHeader>


    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        @if (isLoading)
        {
            <div class="flex items-center justify-center py-16">
                <svg class="animate-spin h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                </svg>
            </div>
        }
        else if (subdomain == null)
        {
            <div class="text-center py-16">
                <h3 class="text-lg font-medium text-gray-900">Subdomain not found</h3>
                <p class="mt-2 text-sm text-gray-500">It may have been removed or you don't have access.</p>
            </div>
        }
        else
        {
            <!-- Suspended Banner -->
            @if (subdomain.Status == SubdomainStatus.Suspended)
            {
                <div class="mb-6 rounded-md bg-red-50 border border-red-200 p-4">
                    <div class="flex">
                        <svg class="h-5 w-5 text-red-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18 21l-2.636-2.636M5.636 5.636L3 3l2.636 2.636"></path>
                        </svg>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">This subdomain is suspended</h3>
                            <p class="mt-1 text-sm text-red-700">
                                Email processing is disabled until the subdomain is unsuspended.
                            </p>
                        </div>
                    </div>
                </div>
            }

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Overview -->
                <div class="lg:col-span-2 bg-white border border-gray-200 rounded-lg shadow-sm">
                    <div class="px-6 py-5 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <h2 class="text-lg font-medium text-gray-900">@subdomain.FullName</h2>
                                <p class="text-sm text-gray-500">@(subdomain.Description ?? "No description")</p>
                            </div>
                            <div class="text-right">
                                <span class="@StyleHelpers.GetStatusClasses(subdomain.Status)">@GetStatusText(subdomain.Status)</span>
                                <div class="mt-1 flex items-center justify-end">
                                    @if (subdomain.MxStatus == MxStatus.Valid)
                                    {
                                        <svg class="h-5 w-5 text-green-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                        <span class="text-sm text-green-700 font-medium">MX Valid</span>
                                    }
                                    else if (subdomain.MxStatus == MxStatus.Invalid)
                                    {
                                        <svg class="h-5 w-5 text-red-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                        <span class="text-sm text-red-700 font-medium">No MX Records</span>
                                    }
                                    else
                                    {
                                        <svg class="h-5 w-5 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="text-sm text-gray-700 font-medium">MX Unknown</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="px-6 py-5 space-y-6">
                        <!-- Key Metrics -->
                        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                            <div>
                                <div class="text-xs text-gray-500 uppercase">Created</div>
                                <div class="text-sm text-gray-900">@subdomain.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                           
                            
                        </div>

                        <!-- MX Records Status -->
                        @if (subdomain.MxStatus != MxStatus.Valid)
                        {
                            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                                <h3 class="text-sm font-medium text-yellow-800 mb-2">Verify domain to enable subdomains</h3>
                                <p class="text-sm text-yellow-700 mb-3">Add this DNS MX record and then click "Check Verification".</p>
                                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                                    <div>
                                        <div class="text-xs text-gray-500 uppercase">Type</div>
                                        <code class="px-2 py-1 text-sm bg-white border rounded">MX</code>
                                    </div>
                                    <div>
                                        <div class="text-xs text-gray-500 uppercase">Value</div>
                                        <code class="px-2 py-1 text-sm bg-white border rounded">@this.settings.MailServerHostname</code>
                                    </div>
                                    <div>
                                        <div class="text-xs text-gray-500 uppercase">Priority</div>
                                        <code class="px-2 py-1 text-sm bg-white border rounded">@this.settings.MxPriority</code>
                                    </div>
                                </div>
                                
                                <div class="mt-4">
                                    <button @onclick="CheckMxRecords" disabled="@isCheckingMx" 
                                            class="text-sm font-medium text-blue-600 hover:text-blue-800 disabled:opacity-50">
                                        @(isCheckingMx ? "Checking..." : "Re-check MX Records")
                                    </button>
                                </div>
                            </div>
                        }
                        
                        
                        
                        <!-- Email Recipients -->
                        
                        <div class="mt-6">
                            <div class="border-b border-gray-200">
                                <nav class="-mb-px flex space-x-8">
                                    <button @onclick="() => SetActiveTab(0)" 
                                            class="@(_activeTab == 0 ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                                        Moderators
                                    </button>
                                    <button @onclick="() => SetActiveTab(1)" 
                                            class="@(_activeTab == 1 ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                                        Viewers
                                    </button>
                                </nav>
                            </div>
                            
                            <div class="py-4">
                                @if (_activeTab == 0)
                                {
                                    <UserAssignment @ref="moderatorAssignments" EntityId="Id" EntityUsage="UserAssignment.Usage.SubdomainModeration" Name="@subdomain.FullName"/>
                                }
                                else if (_activeTab == 1)
                                {
                                    <UserAssignment @ref="_viewerAssignments" EntityId="Id" EntityUsage="UserAssignment.Usage.SubdomainViewing" Name="@subdomain.FullName"/>
                                }
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Side Panel -->
                <div class="space-y-6">
                    <!-- Actions -->
                    <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
                        <div class="px-5 py-4 border-b border-gray-200">
                            <h3 class="text-sm font-medium text-gray-900">Actions</h3>
                        </div>
                        <div class="px-5 py-4 space-y-2">
                            <button @onclick="OpenEditSubdomain" 
                                    class="block w-full text-left px-3 py-2 text-sm rounded-md border text-gray-700 bg-white hover:bg-gray-50">
                                Edit Subdomain
                            </button>
                            <button @onclick="OpenAddModerator" class="block w-full text-left px-3 py-2 text-sm rounded-md border text-gray-700 bg-white hover:bg-gray-50">
                                Add Moderator
                            </button>
                            
                            <button @onclick="OpenAddViewer" class="block w-full text-left px-3 py-2 text-sm rounded-md border text-gray-700 bg-white hover:bg-gray-50">
                                Add Viewer
                            </button>
                            @if (subdomain.Status != SubdomainStatus.Suspended)
                            {
                                <button @onclick="OpenSuspendSubdomain" 
                                        class="block w-full text-left px-3 py-2 text-sm rounded-md text-white bg-red-600 hover:bg-red-700">
                                    Suspend Subdomain
                                </button>
                            }
                            else
                            {
                                <button @onclick="OpenUnsuspendSubdomain" 
                                        class="block w-full text-left px-3 py-2 text-sm rounded-md text-white bg-green-600 hover:bg-green-700">
                                    Unsuspend Subdomain
                                </button>
                            }
                        </div>
                    </div>

                    <!-- Parent Domain Info -->
                    <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
                        <div class="px-5 py-4 border-b border-gray-200">
                            <h3 class="text-sm font-medium text-gray-900">Parent Domain</h3>
                        </div>
                        <div class="px-5 py-4">
                            <div class="flex items-center">
                                <div class="h-10 w-10 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-lg flex items-center justify-center">
                                    <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9 3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">@subdomain.FullName</div>
                                    <div class="text-xs text-gray-500">Parent Domain</div>
                                </div>
                            </div>
                            <div class="mt-4">
                                <button @onclick="NavigateToParentDomain" 
                                        class="w-full px-3 py-2 text-sm rounded-md border text-gray-700 bg-white hover:bg-gray-50">
                                    View Domain Details
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
                        <div class="px-5 py-4 border-b border-gray-200">
                            <h3 class="text-sm font-medium text-gray-900">Recent Activity</h3>
                        </div>
                        <div class="px-5 py-4">
                            <div class="flow-root">
                                <ul class="-mb-8">
                                    <li class="relative pb-8">
                                        <div class="relative flex space-x-3">
                                            <div class="h-8 w-8 bg-blue-500 rounded-full flex items-center justify-center">
                                                <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                                </svg>
                                            </div>
                                            <div class="min-w-0 flex-1">
                                                <div class="text-sm text-gray-900">Subdomain created</div>
                                                <div class="text-xs text-gray-500">@subdomain.CreatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <EditSubdomain @ref="editSubdomain" OnSaved="HandleSubdomainUpdated" />
            <SuspendSubdomain @ref="suspendSubdomain" OnSuspended="HandleSubdomainSuspended"/>
            <UnsuspendSubdomain @ref="unsuspendSubdomain" OnUnsuspended="HandleSubdomainUnsuspended"/>
            <AddUser @ref="addModerator" EntityId="Id" EntityUsage="AddUser.Usage.Subdomain" EntityName="@subdomain.FullName" OnAdded="HandleModeratorAdded" />
            <AddUser @ref="_addViewer" EntityId="Id" EntityUsage="AddUser.Usage.Viewer" EntityName="@subdomain.FullName" OnAdded="HandleViewerAdded" />
        }
    </div>
</div>
