@layout AppLayout
@namespace Spamma.App.Client.Layout
@inherits LayoutComponentBase

<AdminHeader Title="Account" Subtitle="Manage settings for your account"></AdminHeader>

<div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            <!-- Main Content (left) -->
            <div class="lg:col-span-3">
                @Body
            </div>

            <!-- Right: Navigation Panel -->
            <div class="space-y-6">
                <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
                    <div class="px-5 py-4 space-y-2">
                        <NavLink href="/account/passkeys" class="block px-3 py-2 rounded-md text-sm text-gray-700 hover:bg-gray-50" ActiveClass="bg-blue-50 border-l-4 border-blue-500 text-blue-700 font-semibold" Match="NavLinkMatch.Prefix">Passkeys</NavLink>
                        <NavLink href="/account/api-keys" class="block px-3 py-2 rounded-md text-sm text-gray-700 hover:bg-gray-50" ActiveClass="bg-blue-50 border-l-4 border-blue-500 text-blue-700 font-semibold" Match="NavLinkMatch.Prefix">API Keys</NavLink>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>