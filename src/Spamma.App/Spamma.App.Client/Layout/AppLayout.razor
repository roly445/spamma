@using Microsoft.AspNetCore.Components.Authorization
@using Spamma.Modules.Common.Client.Infrastructure.Constants
@inherits LayoutComponentBase


    <NotificationContainer/>
    <div class="h-screen flex flex-col bg-gray-100">
        <!-- Top Navigation -->
        <div class="bg-white shadow-sm border-b border-gray-200">
            <div class="px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="h-10 w-10 bg-blue-600 rounded-lg flex items-center justify-center">
                            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <a href="/app" class="ml-3 text-2xl font-bold text-gray-900 hover:text-gray-700 transition-colors duration-200">
                            Spamma
                        </a>
                    </div>
                    <div class="flex items-center space-x-4">
                        <!-- Settings Dropdown -->
                        <div class="relative settings-dropdown-container" @onclick:stopPropagation="true">
                            <button @onclick="ToggleSettingsDropdown" class="p-2 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </button>

                            @if (showSettingsDropdown)
                            {
                                <div class="absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50">
                                    <div class="py-1" role="menu">
                                        <div class="px-4 py-2 text-sm text-gray-500 border-b border-gray-200">
                                            <span class="font-medium">Account</span>
                                        </div>
                                        <a href="/account/passkeys" @onclick="() => CloseDropdown()" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">
                                            <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                                            </svg>
                                            Passkeys
                                        </a>
                                        <a href="/account/api-keys" @onclick="() => CloseDropdown()" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">
                                            <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                                            </svg>
                                            API Keys
                                        </a>
                                        <div class="border-t border-gray-200"></div>
                                        <div class="px-4 py-2 text-sm text-gray-500 border-b border-gray-200">
                                            <span class="font-medium">Administration</span>
                                        </div>
                                        <AuthorizeView Policy="UserAdministration">
                                            <Authorized>
                                                <a href="/admin/users" @onclick="() => CloseDropdown()" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                    </svg>
                                                    User Management
                                                </a>
                                            </Authorized>
                                        </AuthorizeView>
                                        <AuthorizeView Policy="@Lookups.AssignedToAnyDomain">
                                            <Authorized>
                                                <a href="/admin/domains" @onclick="() => CloseDropdown()" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9 3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                                                    </svg>
                                                    Domain Management
                                                </a>
                                            </Authorized>
                                        </AuthorizeView>
                                        <AuthorizeView Policy="@Lookups.AssignedToAnySubdomain">
                                            <Authorized>
                                                <a href="/admin/subdomains" @onclick="() => CloseDropdown()" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                                    </svg>
                                                    Subdomain Management
                                                </a>
                                            </Authorized>
                                        </AuthorizeView>
                                        <AuthorizeView Policy="@Lookups.CanModerateChaosAddresses">
                                            <Authorized>
                                                <a href="/chaos-addresses" @onclick="() => CloseDropdown()" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 4v2M7.08 6.06A9 9 0 110 12a9 9 0 0110.08-5.94z"></path>
                                                    </svg>
                                                    Chaos Addresses
                                                </a>
                                            </Authorized>
                                        </AuthorizeView>
                                        <div class="border-t border-gray-200"></div>
                                        <div class="px-4 py-2 text-sm text-gray-500 border-b border-gray-200">
                                            <span class="font-medium">Analytics</span>
                                        </div>
                                        <AuthorizeView Policy="@Lookups.AssignedToAnySubdomain">
                                            <Authorized>
                                                <a href="/campaigns" @onclick="() => CloseDropdown()" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                                    </svg>
                                                    Email Campaigns
                                                </a>
                                            </Authorized>
                                        </AuthorizeView>
                                    </div>
                                </div>
                            }
                        </div>


                        <a href="/logout" type="submit" class="p-2 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100" title="Logout">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                        </a>
                        <CascadingAuthenticationState>
                            <AuthorizeView>
                                <Authorized>
                                    <UserAvatar />
                                </Authorized>
                                <NotAuthorized>
                                    <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                                        <span class="text-sm font-medium text-gray-700">U</span>
                                    </div>
                                </NotAuthorized>
                            </AuthorizeView>
                        </CascadingAuthenticationState>
                    </div>
                </div>
            </div>
        </div>

        @Body
    </div>

<div id="blazor-error-ui" data-nosnippet class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 p-4">
    <div class="bg-white rounded-lg shadow-2xl max-w-md w-full">
        <!-- Error Header -->
        <div class="px-6 py-4 border-b border-red-200 bg-red-50">
            <div class="flex items-center">
                <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 4v2M7.08 6.06A9 9 0 110 12a9 9 0 0110.08-5.94z"></path>
                </svg>
                <h2 class="ml-3 text-lg font-medium text-red-900">Application Error</h2>
            </div>
        </div>

        <!-- Error Content -->
        <div class="px-6 py-4">
            <p class="text-gray-700 mb-4">An unhandled error has occurred. Please try to reload the page.</p>
            <div class="bg-red-50 border border-red-200 rounded-md p-3 mb-4">
                <p class="text-sm text-red-700 mb-2">If the problem persists, please report it on GitHub:</p>
                <a href="https://github.com/roly445/spamma/issues" target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:text-blue-800 underline">github.com/roly445/spamma/issues</a>
            </div>
        </div>

        <!-- Error Actions -->
        <div class="px-6 py-3 border-t border-gray-200 bg-gray-50 flex gap-3">
            <a href="." class="reload flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reload
            </a>
            <button class="dismiss inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
    </div>
</div>
