@namespace Spamma.App.Client.Components.Base

@* Shared modal overlay component with consistent styling and optional background-click-to-close *@

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="@AriaLabelledBy" role="dialog" aria-modal="true">
        <!-- Background overlay -->
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
          <!-- Backdrop (with optional click-to-close) -->
          <div class="fixed inset-0 bg-black/60 transition-opacity backdrop-blur-sm z-[9998]" @onclick="HandleBackdropClick" aria-hidden="true">
              <!-- This element is to trick the browser into centering the modal contents. -->
              <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
              
              <!-- Modal content (stacked above backdrop) -->
              <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle @WidthClass z-[9999]">
                  @ChildContent
              </div>  
          </div>
        </div>
    </div>
}