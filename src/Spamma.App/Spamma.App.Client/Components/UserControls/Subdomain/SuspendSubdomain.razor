@using Spamma.Modules.DomainManagement.Client.Contracts
@if (isVisible && _dataModel != null)
{
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full" @onclick:stopPropagation="true">
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-medium text-gray-900">Suspend Subdomain</h3>
                    <button @onclick="Close" class="text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <EditForm Model="@model" OnValidSubmit="@HandleSuspendSubdomain" FormName="SuspendSubdomainForm">
                <DataAnnotationsValidator />
                
                <div class="px-6 py-4 space-y-4">
                    <!-- Warning -->
                    <div class="bg-red-50 border border-red-200 rounded-md p-4">
                        <div class="flex">
                            <svg class="h-5 w-5 text-red-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.736 0L3.077 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                            <div>
                                <h4 class="text-sm font-medium text-red-800">Warning</h4>
                                <p class="text-sm text-red-700 mt-1">
                                    Suspending <strong>@_dataModel?.FullName</strong> will:
                                </p>
                                <ul class="text-sm text-red-700 mt-2 list-disc list-inside space-y-1">
                                    <li>Stop all email processing for this subdomain</li>
                                    <li>Disable chaos monkey rules</li>
                                    <li>Pause active campaigns</li>
                                    <li>Block new recipient registrations</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Suspension Reason -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Suspension Reason <span class="text-red-500">*</span>
                        </label>
                        <InputSelect @bind-Value="model.Reason" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Select a reason...</option>
                            <option value="@SubdomainSuspensionReason.PolicyViolation">Policy Violation</option>
                            <option value="@SubdomainSuspensionReason.SecurityConcern">Security Concern</option>
                            <option value="@SubdomainSuspensionReason.TechnicalIssue">Technical Issue</option>
                            <option value="@SubdomainSuspensionReason.MaintenanceMode">Maintenance Mode</option>
                            <option value="@SubdomainSuspensionReason.ResourceExceeded">Resource Limits Exceeded</option>
                            <option value="@SubdomainSuspensionReason.AdminRequest">Administrative Request</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => model.Reason)" class="text-red-600 text-sm mt-1" />
                    </div>

                    <!-- Additional Notes -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Additional Notes
                        </label>
                        <InputTextArea @bind-Value="model.Notes" 
                                      rows="3" 
                                      placeholder="Optional: Add details about the suspension reason..."
                                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <ValidationMessage For="@(() => model.Notes)" class="text-red-600 text-sm mt-1" />
                    </div>
                </div>

                <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-end space-x-3">
                    <button type="button" @onclick="Close" 
                           class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Cancel
                    </button>
                    <button type="submit" 
                           disabled="@isProcessing"
                           class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 disabled:opacity-50">
                        @if (isProcessing)
                        {
                            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Suspending...</span>
                        }
                        else
                        {
                            <span>Suspend Subdomain</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}