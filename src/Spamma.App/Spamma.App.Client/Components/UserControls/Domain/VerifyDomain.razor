@if (isVisible && _dataModel != null)
{
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity z-50 flex items-center justify-center p-4" @onclick="Close">
        <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-screen overflow-y-auto" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 h-10 w-10 bg-amber-100 rounded-lg flex items-center justify-center">
                            <svg class="h-6 w-6 text-amber-600" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-gray-900">Verify Domain Ownership</h3>
                            <p class="text-sm text-gray-500">@_dataModel.DomainName</p>
                        </div>
                    </div>
                    <button @onclick="Close" class="text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500">
                        <svg class="h-6 w-6" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Modal Body -->
            <div class="px-6 py-6">
                @if (_verificationStep == VerificationStep.Instructions)
                {
                    <div class="space-y-6">
                        <!-- Status Alert -->
                        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-amber-400" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.736 0L3.077 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-amber-800">Domain Verification Required</h3>
                                    <div class="mt-2 text-sm text-amber-700">
                                        <p>To verify ownership of <strong>@_dataModel.DomainName</strong>, you need to add a DNS TXT record. This will enable subdomain creation and other advanced features.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- DNS Record Instructions -->
                        <div class="space-y-4">
                            <h4 class="text-sm font-medium text-gray-900">Add the following DNS TXT record:</h4>
                            
                            <div class="bg-gray-50 rounded-lg p-4 space-y-4">
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                    <div>
                                        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Record Type</label>
                                        <div class="flex items-center">
                                            <code class="px-3 py-2 text-sm bg-white border rounded font-mono">TXT</code>
                                            <button @onclick="@(() => CopyToClipboard("TXT"))" class="ml-2 p-1 text-gray-400 hover:text-gray-600 rounded" title="Copy to clipboard">
                                                <svg class="w-4 h-4" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                    <div>
                                        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Name/Host</label>
                                        <div class="flex items-center">
                                            <code class="px-3 py-2 text-sm bg-white border rounded font-mono">@@</code>
                                            <button @onclick="@(() => CopyToClipboard("@"))" class="ml-2 p-1 text-gray-400 hover:text-gray-600 rounded" title="Copy to clipboard">
                                                <svg class="w-4 h-4" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                    <div>
                                        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">TTL</label>
                                        <code class="px-3 py-2 text-sm bg-white border rounded font-mono">3600</code>
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Value</label>
                                    <div class="flex items-center">
                                        <code class="flex-1 px-3 py-2 text-sm bg-white border rounded break-all font-mono">@_currentVerificationToken</code>
                                        <button @onclick="() => CopyToClipboard(_currentVerificationToken)" class="ml-2 px-3 py-2 text-gray-600 bg-white border border-gray-300 rounded hover:bg-gray-50 transition-colors" title="Copy verification token">
                                            <svg class="w-4 h-4" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Step-by-Step Instructions -->
                        <div class="space-y-4">
                            <h4 class="text-sm font-medium text-gray-900">Instructions:</h4>
                            <ol class="list-decimal list-inside space-y-2 text-sm text-gray-700 pl-4">
                                <li>Log in to your DNS provider's control panel (where you manage DNS for @_dataModel.DomainName)</li>
                                <li>Navigate to the DNS management or DNS records section</li>
                                <li>Add a new <strong>TXT record</strong> with the details shown above</li>
                                <li>Save the changes in your DNS control panel</li>
                                <li>Wait a few minutes for DNS propagation (can take up to 24 hours)</li>
                                <li>Click "Check Verification" below to verify your domain</li>
                            </ol>
                        </div>

                        <!-- DNS Provider Quick Links -->
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                            <h4 class="text-sm font-medium text-blue-900 mb-3">Need help? Check your DNS provider's documentation:</h4>
                            <div class="grid grid-cols-2 gap-2 text-sm">
                                <a href="https://support.google.com/domains/answer/3290350" target="_blank" rel="noopener noreferrer" class="text-blue-700 hover:text-blue-800 underline">Google Domains →</a>
                                <a href="https://help.godaddy.com/help/680" target="_blank" rel="noopener noreferrer" class="text-blue-700 hover:text-blue-800 underline">GoDaddy →</a>
                                <a href="https://support.cloudflare.com/hc/en-us/articles/360019093151" target="_blank" rel="noopener noreferrer" class="text-blue-700 hover:text-blue-800 underline">Cloudflare →</a>
                                <a href="https://docs.aws.amazon.com/route53/latest/dg/resource-record-sets-creating.html" target="_blank" rel="noopener noreferrer" class="text-blue-700 hover:text-blue-800 underline">AWS Route 53 →</a>
                            </div>
                        </div>

                        <!-- Current Status -->
                        <div class="bg-gray-50 rounded-lg p-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Current Status</p>
                                    <p class="text-sm text-gray-600">Last checked: @(_lastVerificationCheck?.ToString("MMM dd, yyyy 'at' h:mm tt") ?? "Never")</p>
                                </div>
                                <div class="flex items-center">
                                    <div class="w-2 h-2 bg-red-500 rounded-full mr-2"></div>
                                    <span class="text-sm text-red-700 font-medium">Not Verified</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal Actions -->
                    <div class="mt-6 flex justify-end space-x-3">
                        <button type="button" @onclick="Close" 
                               class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            I'll Verify Later
                        </button>
                        <button type="button" @onclick="CheckDomainVerification"
                               disabled="@_isCheckingVerification"
                               class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:opacity-50 disabled:cursor-not-allowed">
                            @if (_isCheckingVerification)
                            {
                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Checking Verification...</span>
                            }
                            else
                            {
                                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                </svg>
                                <span>Check Verification</span>
                            }
                        </button>
                    </div>
                }
                else if (_verificationStep == VerificationStep.Success)
                {
                    <!-- Verification Success -->
                    <div class="text-center space-y-6">
                        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100">
                            <svg class="h-8 w-8 text-green-600" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-medium text-gray-900">Domain Verified Successfully!</h3>
                            <p class="mt-2 text-sm text-gray-600">
                                <strong>@_dataModel.DomainName</strong> has been verified and is ready for use.
                            </p>
                        </div>

                        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-green-400" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-green-800">What's next?</h3>
                                    <div class="mt-2 text-sm text-green-700">
                                        <ul class="list-disc list-inside space-y-1">
                                            <li>You can now create subdomains for this domain</li>
                                            <li>Assign users to manage this domain</li>
                                            <li>Configure email settings and campaigns</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-center space-x-3">
                            <button type="button" @onclick="Close" 
                                   class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Close
                            </button>
                            @* <button type="button" @onclick="() => NavigateToSubdomains(domainToVerify)"  *@
                            @*        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"> *@
                            @*     <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24"> *@
                            @*         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path> *@
                            @*     </svg> *@
                            @*     Create Subdomains *@
                            @* </button> *@
                        </div>
                    </div>
                }
                else if (_verificationStep == VerificationStep.Failed)
                {
                    <!-- Verification Failed -->
                    <div class="text-center space-y-6">
                        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100">
                            <svg class="h-8 w-8 text-red-600" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-medium text-gray-900">Verification Not Ready</h3>
                            <p class="mt-2 text-sm text-gray-600">
                                We couldn't find the verification TXT record for <strong>@_dataModel.DomainName</strong>.
                            </p>
                        </div>

                        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-amber-400" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.736 0L3.077 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-amber-800">Possible reasons:</h3>
                                    <div class="mt-2 text-sm text-amber-700">
                                        <ul class="list-disc list-inside space-y-1">
                                            <li>DNS record hasn't been added yet</li>
                                            <li>DNS changes are still propagating (can take up to 24 hours)</li>
                                            <li>Incorrect TXT record value or placement</li>
                                            <li>DNS provider configuration issues</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-center space-x-3">
                            <button type="button" @onclick="() => { _verificationStep = VerificationStep.Instructions; }" 
                                   class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                View Instructions Again
                            </button>
                            <button type="button" @onclick="CheckDomainVerification"
                                   disabled="@_isCheckingVerification"
                                   class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:opacity-50 disabled:cursor-not-allowed">
                                Try Again
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}