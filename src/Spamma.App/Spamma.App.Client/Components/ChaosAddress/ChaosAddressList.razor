@using Spamma.Modules.DomainManagement.Client.Application.Queries
@using Spamma.Modules.DomainManagement.Client.Application.Commands.CreateChaosAddress
@using Spamma.Modules.DomainManagement.Client.Application.Commands.EnableChaosAddress
@using Spamma.Modules.DomainManagement.Client.Application.Commands.DisableChaosAddress
@using Spamma.Modules.Common.Client
@using BluQube.Commands
@using BluQube.Queries
@using BluQube.Constants
@using Microsoft.AspNetCore.Components.Authorization
@using Spamma.App.Client.Infrastructure.Auth
@inject IQuerier Querier
@inject ICommander Commander
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="bg-white border border-gray-200 rounded-lg p-4">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-medium">Chaos Addresses</h2>
        @if (canCreate)
        {
            <button class="px-3 py-1 text-sm bg-blue-600 text-white rounded hover:bg-blue-700" @onclick="OpenCreate">
                Create Chaos Address
            </button>
        }
    </div>

    @if (!isInitialized)
    {
        <div class="text-center py-8">
            <svg class="animate-spin h-6 w-6 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
            </svg>
        </div>
    }
    else if (!canView)
    {
        <div class="bg-yellow-50 border border-yellow-200 rounded p-4 text-sm text-yellow-800">
            <p>You do not have permission to view chaos addresses for this subdomain.</p>
        </div>
    }
    else if (isLoading)
    {
        <div class="text-center py-8">
            <svg class="animate-spin h-6 w-6 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
            </svg>
        </div>
    }
    else if (chaosAddresses == null || chaosAddresses.Count == 0)
    {
        <div class="text-center py-8 text-gray-500">
            <p>No chaos addresses yet. @(canCreate ? "Create one to get started." : "")</p>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded text-sm text-red-700">
                @errorMessage
            </div>
        }

        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="border-b border-gray-200">
                    <tr>
                        <th class="text-left py-2 px-3 font-medium">Email Address</th>
                        <th class="text-left py-2 px-3 font-medium">Status</th>
                        <th class="text-left py-2 px-3 font-medium">SMTP Code</th>
                        <th class="text-left py-2 px-3 font-medium">Received</th>
                        <th class="text-left py-2 px-3 font-medium">Last Received</th>
                        <th class="text-left py-2 px-3 font-medium">Created</th>
                        <th class="text-center py-2 px-3 font-medium">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chaos in chaosAddresses)
                    {
                        var isImmutable = chaos.TotalReceived > 0;
                        <tr class="border-b border-gray-100 hover:bg-gray-50">
                            <td class="py-3 px-3">
                                <span class="font-mono text-xs">@chaos.LocalPart</span>
                                @if (isImmutable)
                                {
                                    <span class="inline-block ml-2 px-2 py-0.5 bg-orange-100 text-orange-700 text-xs rounded" title="This address is immutable after receiving its first email">Immutable</span>
                                }
                            </td>
                            <td class="py-3 px-3">
                                <span class="@(chaos.Enabled ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800") px-2 py-1 rounded text-xs font-medium">
                                    @(chaos.Enabled ? "Enabled" : "Disabled")
                                </span>
                            </td>
                            <td class="py-3 px-3 font-mono text-xs">@chaos.ConfiguredSmtpCode</td>
                            <td class="py-3 px-3">@chaos.TotalReceived</td>
                            <td class="py-3 px-3">
                                @if (chaos.LastReceivedAt.HasValue)
                                {
                                    <span title="@chaos.LastReceivedAt.Value.ToString("u")">@chaos.LastReceivedAt.Value.ToString("yyyy-MM-dd HH:mm") UTC</span>
                                }
                                else
                                {
                                    <span class="text-gray-400">Never received</span>
                                }
                            </td>
                            <td class="py-3 px-3 text-xs">@chaos.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td class="py-3 px-3 text-center space-x-1">
                                @if (canManage)
                                {
                                    <button 
                                        class="px-2 py-1 text-xs @(chaos.Enabled ? "bg-red-100 text-red-600 hover:bg-red-200" : "bg-green-100 text-green-600 hover:bg-green-200") rounded"
                                        @onclick="() => ToggleChaosAddress(chaos.Id, !chaos.Enabled)"
                                        title="@(chaos.Enabled ? "Disable" : "Enable")">
                                        @(chaos.Enabled ? "Disable" : "Enable")
                                    </button>
                                    @if (!isImmutable)
                                    {
                                        <button class="px-2 py-1 text-xs bg-gray-100 text-gray-600 hover:bg-gray-200 rounded" @onclick="() => DeleteChaosAddress(chaos.Id)" title="Delete">Delete</button>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs text-gray-400 cursor-help" title="Immutable after first receive - editing not allowed">â€”</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-xs text-gray-400">Read-only</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <CreateChaosAddress @ref="createModal" SubdomainId="SubdomainId ?? Guid.Empty" OnCreated="HandleCreated" />
</div>

@code {
    [Parameter]
    public Guid? SubdomainId { get; set; }

    private CreateChaosAddress? createModal;
    private IReadOnlyList<ChaosAddressSummary>? chaosAddresses;
    private bool isLoading;
    private bool isInitialized;
    private string? errorMessage;
    private bool canView;
    private bool canCreate;
    private bool canManage;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userInfo = authState.ToUserAuthInfo();
        canView = userInfo.CanViewChaosAddresses();
        canCreate = userInfo.CanCreateChaosAddresses();
        canManage = userInfo.CanManageChaosAddresses();
        
        await LoadChaosAddresses();
        isInitialized = true;
    }

    private async Task LoadChaosAddresses()
    {
        if (!canView)
            return;

        isLoading = true;
        errorMessage = null;
        try
        {
            var query = new GetChaosAddressesQuery(SubdomainId);
            var result = await Querier.Send(query);
            if (result.Status == QueryResultStatus.Succeeded && result.Data != null)
            {
                chaosAddresses = result.Data.Items;
            }
            else
            {
                errorMessage = "Failed to load chaos addresses.";
                chaosAddresses = new List<ChaosAddressSummary>();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading chaos addresses: {ex.Message}";
            chaosAddresses = new List<ChaosAddressSummary>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenCreate() => createModal?.Open();

    private async Task HandleCreated()
    {
        await LoadChaosAddresses();
    }

    private async Task ToggleChaosAddress(Guid id, bool enable)
    {
        try
        {
            ICommand command = enable 
                ? new EnableChaosAddressCommand(id, Guid.NewGuid()) 
                : (ICommand)new DisableChaosAddressCommand(id, Guid.NewGuid());
            
            var result = await Commander.Send(command);
            if (result.Status == CommandResultStatus.Succeeded)
            {
                await LoadChaosAddresses();
            }
            else
            {
                errorMessage = "Failed to update chaos address.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task DeleteChaosAddress(Guid _)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this chaos address?"))
        {
            try
            {
                // Note: DeleteChaosAddressCommand not yet implemented on backend
                await LoadChaosAddresses();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error: {ex.Message}";
            }
        }
    }
}

 
