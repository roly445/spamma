@using Spamma.Modules.DomainManagement.Client.Application.Commands.CreateChaosAddress
@using Spamma.Modules.DomainManagement.Client.Application.Queries
@using Spamma.Modules.Common
@using BluQube.Commands
@using BluQube.Constants
@inject ICommander Commander

@if (showModal)
{
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity z-50 flex items-center justify-center p-4" @onclick="Close">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full max-h-screen overflow-y-auto" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-medium text-gray-900">Create Chaos Address</h3>
                    <button @onclick="Close" class="text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Modal Body -->
            <div class="px-6 py-4">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded text-sm text-red-700">
                        @errorMessage
                    </div>
                }

                <EditForm Model="@model" OnValidSubmit="@HandleCreate" FormName="CreateChaosAddressForm">
                    <DataAnnotationsValidator />

                    <div class="space-y-4">
                        <!-- Local Part -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Local Part <span class="text-red-500">*</span>
                            </label>
                            <InputText @bind-Value="model.LocalPart" 
                                      placeholder="e.g., chaos, test-addr"
                                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                            <ValidationMessage For="@(() => model.LocalPart)" class="mt-1 text-sm text-red-600" />
                            <p class="mt-1 text-xs text-gray-500">The email prefix before the mail sign</p>
                        </div>

                        <!-- SMTP Code Dropdown -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                SMTP Error Code <span class="text-red-500">*</span>
                            </label>
                            <select @bind="model.SmtpCode" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="">-- Select an SMTP code --</option>
                                @foreach (var smtpCode in GetSmtpCodes())
                                {
                                    <option value="@((int)smtpCode)">@smtpCode.ToString() (@GetSmtpDescription(smtpCode))</option>
                                }
                            </select>
                            @if (model.SmtpCode == 0)
                            {
                                <p class="mt-1 text-sm text-red-600">Please select an SMTP error code</p>
                            }
                            <p class="mt-1 text-xs text-gray-500">The SMTP error code to return when this address receives mail</p>
                        </div>

                        <!-- Description (Optional) -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Description (Optional)</label>
                            <InputTextArea @bind-Value="model.Description" 
                                         placeholder="e.g., Testing bounce handling"
                                         class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                         rows="3" />
                            <ValidationMessage For="@(() => model.Description)" class="mt-1 text-sm text-red-600" />
                        </div>

                        <!-- Info Box -->
                        <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div class="ml-3 flex-1">
                                    <p class="text-sm text-blue-700">
                                        This chaos address will be created in a <strong>disabled</strong> state. Enable it when ready to start testing.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="mt-6 flex justify-end space-x-3">
                        <button type="button" @onclick="Close" 
                               class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Cancel
                        </button>
                        <button type="submit" 
                               disabled="@isCreating"
                               class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                            @if (isCreating)
                            {
                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Creating...</span>
                            }
                            else
                            {
                                <span>Create Chaos Address</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid SubdomainId { get; set; }

    [Parameter]
    public EventCallback OnCreated { get; set; }

    private bool showModal;
    private bool isCreating;
    private string? errorMessage;

    private CreateChaosAddressFormModel model = new();

    public void Open()
    {
        showModal = true;
        model = new();
        errorMessage = null;
    }

    public void Close()
    {
        showModal = false;
        model = new();
        errorMessage = null;
    }

    private async Task HandleCreate()
    {
        isCreating = true;
        errorMessage = null;

        try
        {
            var command = new CreateChaosAddressCommand(
                Guid.NewGuid(), // Id
                Guid.Empty, // DomainId (to be set by backend)
                SubdomainId, // SubdomainId
                model.LocalPart,
                (SmtpResponseCode)model.SmtpCode,
                Guid.Empty // CreatedBy (to be set by backend from auth context)
            );

            var result = await Commander.Send(command);

            if (result.Status == CommandResultStatus.Succeeded)
            {
                Close();
                await OnCreated.InvokeAsync(null);
            }
            else
            {
                errorMessage = "Failed to create chaos address";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private static IEnumerable<SmtpResponseCode> GetSmtpCodes()
    {
        // Return common chaos codes
        return new[]
        {
            SmtpResponseCode.ServiceNotAvailable, // 421
            SmtpResponseCode.MailboxUnavailable, // 450
            SmtpResponseCode.RequestedActionAborted, // 451
            SmtpResponseCode.InsufficientSystemStorage, // 452
            SmtpResponseCode.SyntaxError, // 500
            SmtpResponseCode.MailboxUnavailablePermanent, // 550
            SmtpResponseCode.UserNotLocalTryForwardPath, // 551
            SmtpResponseCode.ExceededStorageAllocation, // 552
            SmtpResponseCode.MailboxNameNotAllowed, // 553
        };
    }

    private static string GetSmtpDescription(SmtpResponseCode smtpCode)
    {
        return smtpCode switch
        {
            SmtpResponseCode.ServiceNotAvailable => "Service Not Available",
            SmtpResponseCode.MailboxUnavailable => "Mailbox Unavailable",
            SmtpResponseCode.RequestedActionAborted => "Requested Action Aborted",
            SmtpResponseCode.InsufficientSystemStorage => "Insufficient Storage",
            SmtpResponseCode.SyntaxError => "Syntax Error",
            SmtpResponseCode.MailboxUnavailablePermanent => "Mailbox Unavailable (Permanent)",
            SmtpResponseCode.UserNotLocalTryForwardPath => "User Not Local",
            SmtpResponseCode.ExceededStorageAllocation => "Exceeded Storage",
            SmtpResponseCode.MailboxNameNotAllowed => "Mailbox Name Not Allowed",
            _ => "Unknown"
        };
    }

    public class CreateChaosAddressFormModel
    {
        public string LocalPart { get; set; } = string.Empty;
        public int SmtpCode { get; set; }
        public string? Description { get; set; }
    }
} 
