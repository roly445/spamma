@page "/setup/complete"
@using Spamma.App.Components.Layout
@using Spamma.App.Infrastructure.Contracts.Services
@layout SetupLayout


@attribute [ExcludeFromInteractiveRouting]

<PageTitle>Setup Complete - Spamma</PageTitle>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <div class="text-center">
        @if (isSetupComplete)
        {
            <!-- Success Icon -->
            <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-green-100 mb-6">
                <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>

            <!-- Success Message -->
            <h2 class="text-3xl font-bold text-gray-900 mb-4">🎉 Spamma Setup Complete!</h2>
            <p class="text-xl text-gray-600 mb-8">Your self-hosted email testing platform is ready to use.</p>
        }
        else
        {
            <!-- Warning Icon -->
            <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-yellow-100 mb-6">
                <svg class="h-10 w-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
            </div>

            <!-- Incomplete Setup Message -->
            <h2 class="text-3xl font-bold text-gray-900 mb-4">⚠️ Setup Incomplete</h2>
            <p class="text-xl text-red-600 mb-8">Some required setup steps are missing.</p>
        }

        <!-- Setup Status Overview -->
        <div class="bg-gray-50 rounded-lg p-6 mb-8 text-left">
            <h3 class="text-lg font-medium text-gray-900 mb-4 text-center">Setup Status</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
                <div class="space-y-3">
                    <div class="flex items-center space-x-3">
                        @if (setupStatus.HasSecurityKeys)
                        {
                            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-gray-900">Security keys generated</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-red-600">Security keys missing</span>
                        }
                    </div>
                    <div class="flex items-center space-x-3">
                        @if (setupStatus.HasEmailConfiguration)
                        {
                            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-gray-900">Email delivery configured</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-red-600">Email configuration missing</span>
                        }
                    </div>
                   
                </div>
                <div class="space-y-3">
                    <div class="flex items-center space-x-3">
                        @if (setupStatus.HasAdminUser)
                        {
                            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-gray-900">Admin user created</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-red-600">Admin user not created</span>
                        }
                    </div>
                    <div class="flex items-center space-x-3">
                        @if (setupStatus.HasEmailConfiguration)
                        {
                            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-gray-900">Magic link authentication enabled</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-red-600">Authentication not configured</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Missing Steps Alert -->
        @if (!isSetupComplete)
        {
            <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8 text-left">
                <h3 class="text-lg font-medium text-red-800 mb-4 text-center">Missing Setup Steps</h3>
                <div class="text-sm text-red-700 space-y-3">
                    @foreach (var missingStep in missingSteps)
                    {
                        <div class="flex items-start space-x-3">
                            <span class="flex-shrink-0 w-6 h-6 bg-red-600 text-white rounded-full flex items-center justify-center text-xs font-semibold">!</span>
                            <div>
                                <p class="font-medium">@missingStep.Title</p>
                                <p class="text-red-600">@missingStep.Description</p>
                                @if (!string.IsNullOrEmpty(missingStep.ActionUrl))
                                {
                                    <a href="@missingStep.ActionUrl" class="inline-flex items-center mt-2 text-sm text-red-600 hover:text-red-800 underline" data-enhance-nav="false">
                                        Complete this step
                                        <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Next Steps or Actions -->
        @if (isSetupComplete)
        {
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8 text-left">
                <h3 class="text-lg font-medium text-blue-800 mb-4 text-center">Next Steps</h3>
                <div class="text-sm text-blue-700 space-y-3">
                    <div class="flex items-start space-x-3">
                        <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-xs font-semibold">1</span>
                        <div>
                            <p class="font-medium">Check your email</p>
                            <p class="text-blue-600">A welcome email with your login link has been sent to your admin email address.</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-xs font-semibold">2</span>
                        <div>
                            <p class="font-medium">Access your dashboard</p>
                            <p class="text-blue-600">Click the magic link in the email to log into your Spamma dashboard.</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-xs font-semibold">3</span>
                        <div>
                            <p class="font-medium">Start testing emails</p>
                            <p class="text-blue-600">Configure your applications to use Spamma as their SMTP server and start capturing emails!</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            @if (isSetupComplete)
            {
                <EditForm Model="CompModel" OnSubmit="ReloadConfiguration" FormName="SetupCompletedForm"  data-disable-form>
                    <InputText @bind-Value="CompModel.SomeValue" type="hidden"/>
                    
                    <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8 text-left w-full">
                    <h3 class="text-lg font-medium text-green-800 mb-4 text-center">Finalize Setup</h3>
                    <div class="text-sm text-green-700 mb-4">
                        <p class="text-center">
                            Your Spamma configuration is complete! Click the button below to finalize the setup process. 
                            This will reload the system configuration, disable setup mode, and redirect you to the login page.
                        </p>
                    </div>
                    <div class="flex justify-center">
                        <button type="submit"
                                class="inline-flex items-center px-8 py-4 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 disabled:opacity-50 transition-colors shadow-lg">
                            <div class="disabled-show flex">    
                                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Finalizing Setup...</span>
                            </div>
                            <div class="disabled-hide flex">
                                <svg class="mr-3 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>Complete Setup & Go to Login</span>
                            </div>
                        </button>
                    </div>
                </div>
                </EditForm>
            }
            else
            {
                <a href="/setup/keys" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" data-enhance-nav="false">
                    <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                    </svg>
                    Complete Missing Steps
                </a>
                <a href="/setup" class="inline-flex items-center px-6 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors" data-enhance-nav="false">
                    <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Back to Setup
                </a>
            }
        </div>
       
    </div>
</div>