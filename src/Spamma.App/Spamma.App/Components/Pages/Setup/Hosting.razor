@page "/setup/hosting"
@using Microsoft.AspNetCore.Components.Sections
@using Spamma.App.Components.Layout
@layout SetupLayout
@attribute [ExcludeFromInteractiveRouting]

<PageTitle>Setup - Hosting Configuration</PageTitle>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Hosting Configuration</h2>
    <p class="text-gray-600 mb-6">Configure server and email routing settings for your Spamma installation.</p>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <!-- Success Message -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6">
            <div class="flex items-center">
                <svg class="h-6 w-6 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <div>
                    <h3 class="text-sm font-medium text-green-800">Hosting configuration saved successfully!</h3>
                    <p class="text-sm text-green-700 mt-1">Your server and email routing settings have been configured and are ready to use.</p>
                </div>
            </div>
        </div>

        <div class="text-center">
            <a href="/setup/email" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors" data-enhance-nav="false">
                Continue to Email Configuration
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    }
    else
    {
        if (hasExistingApplicationConfig)
    {
        <!-- Existing Application Configuration Detected -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-6">
            <div class="flex items-start space-x-3">
                <svg class="h-6 w-6 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                    <h3 class="text-sm font-medium text-yellow-800 mb-2">Existing Hosting Configuration Found</h3>
                    <div class="text-sm text-yellow-700 space-y-2">
                        <p>Hosting settings have already been configured for this Spamma instance.</p>
                        <ul class="list-disc list-inside ml-4 space-y-1">
                            <li><strong>Base URL:</strong> @existingApplicationConfig?.BaseUrl</li>
                            <li><strong>Mail Server:</strong> @existingApplicationConfig?.MailServerHostname</li>
                            <li><strong>MX Priority:</strong> @existingApplicationConfig?.MxPriority</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center"  id="existing-hosting-actions">
            <a href="/setup/email" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors" data-enhance-nav="false">
                <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Skip - Use Existing Configuration
            </a>
            <button id="reconfigure-application-btn" type="button" class="inline-flex items-center px-6 py-3 bg-yellow-600 text-white font-medium rounded-lg hover:bg-yellow-700 transition-colors">
                <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reconfigure Application Settings
            </button>
        </div>
    }
   
        <!-- Application Configuration Form -->
        <div id="application-configuration-form" class="@(hasExistingApplicationConfig ? "hidden" : "")">
            @if (Model != null)
            {
                <EditForm Model="@Model" OnValidSubmit="@HandleSaveApplicationSettings" FormName="HostingSettingsForm" data-disable-form>
                    <DataAnnotationsValidator/>

                    <div class="space-y-6">
                        <!-- Server Settings -->
                        <div>
                            <h3 class="text-lg font-medium text-gray-900 mb-4">Server Configuration</h3>
                            <div class="grid grid-cols-1 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        Base URL
                                    </label>
                                    <InputText @bind-Value="Model.BaseUrl" id="base-url"
                                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               placeholder="https://mail.yourdomain.com"/>
                                    <ValidationMessage For="@(() => Model.BaseUrl)" class="mt-1 text-sm text-red-600"/>
                                    <p class="text-xs text-gray-500 mt-1">This URL will be used for generating links in emails and web redirects. Important for reverse proxy setups.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Email Routing Settings -->
                        <div class="border-t border-gray-200 pt-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">Email Routing Configuration</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        Mail Server Hostname <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="Model.MailServerHostname" id="mail-server-hostname"
                                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               placeholder="mail.yourdomain.com"/>
                                    <ValidationMessage For="@(() => Model.MailServerHostname)" class="mt-1 text-sm text-red-600"/>
                                    <p class="text-xs text-gray-500 mt-1">This hostname must resolve to your server's IP address via an A record.</p>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        MX Priority <span class="text-red-500">*</span>
                                    </label>
                                    <InputNumber @bind-Value="Model.MxPriority" id="mx-priority"
                                                 class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                                 placeholder="10"/>
                                    <ValidationMessage For="@(() => Model.MxPriority)" class="mt-1 text-sm text-red-600"/>
                                    <p class="text-xs text-gray-500 mt-1">Lower numbers have higher priority. Use 10 if unsure.</p>
                                </div>
                            </div>
                        </div>

                        <!-- MX Record Example -->
                        @if (!string.IsNullOrWhiteSpace(Model.MailServerHostname))
                        {
                            <div class="border-t border-gray-200 pt-6">
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                    <div class="flex items-start">
                                        <svg class="h-5 w-5 text-blue-500 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                        </svg>
                                        <div class="flex-1">
                                            <h4 class="text-sm font-medium text-blue-800">MX Record Configuration</h4>
                                            <p class="text-sm text-blue-700 mt-1">Users will need to add this MX record to their DNS settings:</p>
                                            <div class="mt-3 p-3 bg-blue-100 rounded-lg">
                                                <code class="text-sm text-blue-900" id="mx-record-example">
                                                    yourdomain.com. MX @Model.MxPriority @Model.MailServerHostname
                                                </code>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="flex space-x-3 pt-6">
                        <a href="/setup/keys" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors" data-enhance-nav="false">
                            <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                            Back
                        </a>
                        <button type="submit" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 disabled:opacity-50 transition-colors">
                            <div class="disabled-show flex">
                                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Saving Configuration...</span>
                            </div>
                            <div class="disabled-hide flex">
                                <span>Continue to Email Configuration</span>
                                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    }
</div>

<SectionContent SectionName="Scripts">
<script type="module" src="@Assets["setup-hosting.js"]"></script>
</SectionContent>