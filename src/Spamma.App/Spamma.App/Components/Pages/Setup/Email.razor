@page "/setup/email"
@using Spamma.App.Components.Layout
@layout SetupLayout
@inject NavigationManager Navigation

@attribute [ExcludeFromInteractiveRouting]

<PageTitle>Setup - Email Configuration</PageTitle>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Email Configuration</h2>
    <p class="text-gray-600 mb-6">Configure SMTP settings for Spamma to send authentication emails and user notifications.</p>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <!-- Success Message -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6">
            <div class="flex items-center">
                <svg class="h-6 w-6 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <div>
                    <h3 class="text-sm font-medium text-green-800">Email configuration saved successfully!</h3>
                    <p class="text-sm text-green-700 mt-1">Your SMTP settings have been configured and are ready to use.</p>
                </div>
            </div>
        </div>

        <div class="text-center">
            <a href="/setup/admin" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors" data-enhance-nav="false">
                Continue to Admin User Creation
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    }
    else
    {
        
    if (hasExistingEmailConfig)
    {
        <div>
        <!-- Existing Email Configuration Detected -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-6">
            <div class="flex items-start space-x-3">
                <svg class="h-6 w-6 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                    <h3 class="text-sm font-medium text-yellow-800 mb-2">Existing Email Configuration Found</h3>
                    <div class="text-sm text-yellow-700 space-y-2">
                        <p>Email settings have already been configured for this Spamma instance.</p>
                        <ul class="list-disc list-inside ml-4 space-y-1">
                            <li><strong>SMTP Host:</strong> @existingEmailConfig?.SmtpHost</li>
                            <li><strong>From Email:</strong> @existingEmailConfig?.FromEmail</li>
                            <li><strong>From Name:</strong> @existingEmailConfig?.FromName</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/setup/admin" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors" data-enhance-nav="false">
                <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Skip - Use Existing Configuration
            </a>
            <button id="reconfigure-email-btn" type="button" class="inline-flex items-center px-6 py-3 bg-yellow-600 text-white font-medium rounded-lg hover:bg-yellow-700 transition-colors">
                <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reconfigure Email Settings
            </button>
        </div>
        </div>
    }

        <!-- Email Configuration Form -->
        <div id="email-configuration-form" class="@(hasExistingEmailConfig ? "hidden" : "")">
            @if (Model != null)
            {
                <EditForm Model="@Model" OnValidSubmit="@HandleSaveEmailSettings" FormName="EmailForm" data-disable-form>
                    <DataAnnotationsValidator/>

                    <div class="space-y-6">
                        <!-- Basic Email Settings -->
                        <div>
                            <h3 class="text-lg font-medium text-gray-900 mb-4">Spamma Email Identity</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        From Email Address <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="Model.FromEmail" id="from-email"
                                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               placeholder="no-reply@yourapp.com"/>
                                    <ValidationMessage For="@(() => Model.FromEmail)" class="mt-1 text-sm text-red-600"/>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        From Name <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="Model.FromName" id="from-name"
                                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               placeholder="Spamma"/>
                                    <ValidationMessage For="@(() => Model.FromName)" class="mt-1 text-sm text-red-600"/>
                                </div>
                            </div>
                        </div>

                        <!-- SMTP Server Settings -->
                        <div class="border-t border-gray-200 pt-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">Outbound SMTP Server</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        SMTP Host <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="Model.SmtpHost" id="smtp-host"
                                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               placeholder="smtp.gmail.com"/>
                                    <ValidationMessage For="@(() => Model.SmtpHost)" class="mt-1 text-sm text-red-600"/>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        SMTP Port <span class="text-red-500">*</span>
                                    </label>
                                    <InputNumber @bind-Value="Model.SmtpPort" id="smtp-port"
                                                 class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                                 placeholder="587"/>
                                    <ValidationMessage For="@(() => Model.SmtpPort)" class="mt-1 text-sm text-red-600"/>
                                </div>
                            </div>

                            <!-- SMTP Presets (handled by TypeScript) -->
                            <div class="mt-4">
                                <span class="text-sm text-gray-600">Quick setup for common email providers:</span>
                                <div class="grid grid-cols-1 md:grid-cols-4 gap-3 mt-2">
                                    <button type="button" data-preset="development" class="flex items-center p-3 bg-blue-50 hover:bg-blue-100 rounded-lg text-left transition-colors">
                                        <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-blue-900">Development</div>
                                            <div class="text-xs text-blue-700">localhost:1025</div>
                                        </div>
                                    </button>

                                    <button type="button" data-preset="gmail" class="flex items-center p-3 bg-red-50 hover:bg-red-100 rounded-lg text-left transition-colors">
                                        <div class="flex-shrink-0 w-8 h-8 bg-red-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-red-900">Gmail</div>
                                            <div class="text-xs text-red-700">smtp.gmail.com:587</div>
                                        </div>
                                    </button>

                                    <button type="button" data-preset="sendgrid" class="flex items-center p-3 bg-green-50 hover:bg-green-100 rounded-lg text-left transition-colors">
                                        <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 4h10m-5 10V9.5m0 0L8 14m4-4.5L16 14"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-green-900">SendGrid</div>
                                            <div class="text-xs text-green-700">smtp.sendgrid.net:587</div>
                                        </div>
                                    </button>

                                    <button type="button" data-preset="mailgun" class="flex items-center p-3 bg-purple-50 hover:bg-purple-100 rounded-lg text-left transition-colors">
                                        <div class="flex-shrink-0 w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-purple-900">Mailgun</div>
                                            <div class="text-xs text-purple-700">smtp.mailgun.org:587</div>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Authentication Settings -->
                        <div class="border-t border-gray-200 pt-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">SMTP Authentication</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">SMTP Username</label>
                                    <InputText @bind-Value="Model.Username" id="smtp-username"
                                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               placeholder="your-email@gmail.com"/>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">SMTP Password</label>
                                    <InputText @bind-Value="Model.Password" type="password" id="smtp-password"
                                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               placeholder="app-password"/>
                                </div>
                            </div>

                            <div class="mt-6">
                                <div class="flex items-center">
                                    <InputCheckbox @bind-Value="Model.UseSsl" id="use-ssl"
                                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"/>
                                    <label for="use-ssl" class="ml-2 block text-sm text-gray-900">
                                        Use SSL/TLS encryption (recommended)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex space-x-3 pt-6">
                        <a href="/setup/keys" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors" data-enhance-nav="false">
                            <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                            Back
                        </a>
                        <button type="submit" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 disabled:opacity-50 transition-colors">
                            <div class="disabled-show flex">
                                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Saving Configuration...</span>
                            </div>
                            <div class="disabled-hide flex">
                                <span>Continue to Admin User Creation</span>
                                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    }
</div>

<!-- Load the setup email TypeScript module -->
<script type="module" src="@Assets["setup-email.js"]"></script>