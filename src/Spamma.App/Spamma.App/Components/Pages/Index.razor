@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@attribute [ExcludeFromInteractiveRouting]
<PageTitle>Spamma - Smart Email Management</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50">
    <!-- Header -->
    <header class="relative bg-white/80 backdrop-blur-sm border-b border-gray-200/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div class="flex items-center">
                    <div class="h-10 w-10 bg-blue-600 rounded-lg flex items-center justify-center">
                        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <span class="ml-3 text-2xl font-bold text-gray-900">Spamma</span>
                </div>
                <div class="flex items-center space-x-4">
                    <AuthorizeView>
                        <Authorized>
                            <a href="/app" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                                Open App
                            </a>
                        </Authorized>
                        <NotAuthorized>
                            <a href="/login" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" data-enhance-nav="false">
                                Sign In
                            </a>
                        </NotAuthorized>
                    </AuthorizeView>
                    
                </div>
            </div>
        </div>
    </header>

     <!-- Hero Section -->
    <main class="relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
            <div class="text-center">
                <!-- Main Hero Content -->
                <div class="max-w-4xl mx-auto">
                    <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
                        Welcome to
                        <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">Spamma</span>
                    </h1>
                    <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
                        Your self-hosted email testing platform. Capture, inspect, and debug emails from your applications without sending them to real recipients.
                    </p>
                </div>

                <!-- Status Cards -->
                <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12">
                    <!-- SMTP Server -->
                    <div class="bg-white/70 backdrop-blur-sm rounded-xl p-6 shadow-lg border border-gray-200/50">
                        <div class="h-12 w-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">SMTP Server</h3>
                        <p class="text-gray-600 text-sm">Built-in SMTP server to capture emails from your applications</p>
                    </div>

                    <!-- Email Inspection -->
                    <div class="bg-white/70 backdrop-blur-sm rounded-xl p-6 shadow-lg border border-gray-200/50">
                        <div class="h-12 w-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Email Inspection</h3>
                        <p class="text-gray-600 text-sm">View HTML, text content, headers, and attachments in detail</p>
                    </div>

                    <!-- Self-Hosted -->
                    <div class="bg-white/70 backdrop-blur-sm rounded-xl p-6 shadow-lg border border-gray-200/50">
                        <div class="h-12 w-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                            <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Self-Hosted</h3>
                        <p class="text-gray-600 text-sm">Complete control over your data with local hosting</p>
                    </div>
                </div>

                <!-- Quick Start Info -->
                <div class="bg-white/50 backdrop-blur-sm rounded-2xl p-8 shadow-xl border border-gray-200/50 max-w-4xl mx-auto">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">Getting Started</h2>
                    <div class="grid md:grid-cols-2 gap-8 text-left">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                                <span class="h-6 w-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">1</span>
                                Configure Your App
                            </h3>
                            <p class="text-gray-600 ml-9">Point your application's SMTP settings to this Spamma instance. No real emails will be sent.</p>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                                <span class="h-6 w-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">2</span>
                                View & Debug
                            </h3>
                            <p class="text-gray-600 ml-9">Access the dashboard to view, search, and analyze all captured emails in real-time.</p>
                        </div>
                    </div>
                </div>

                <!-- System Status -->
                <div class="mt-12 flex justify-center">
                    <div class="bg-green-50 border border-green-200 rounded-lg px-6 py-3 flex items-center space-x-2">
                        <div class="h-3 w-3 bg-green-500 rounded-full animate-pulse"></div>
                        <span class="text-sm font-medium text-green-800">System Ready</span>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <div class="flex justify-center items-center space-x-2 mb-4">
                    <div class="h-8 w-8 bg-blue-600 rounded-lg flex items-center justify-center">
                        <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <span class="text-xl font-bold text-gray-900">Spamma</span>
                </div>
                <p class="text-gray-600 mb-4">Smart Email Management Made Simple</p>
                <p class="text-sm text-gray-500">
                    © @DateTime.Now.Year Spamma. All rights reserved.
                </p>
            </div>
        </div>
    </footer>
</div>


