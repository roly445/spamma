{
  "name": "spamma-app",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "7.1.2",
    "file-loader": "6.2.0",
    "mini-css-extract-plugin": "2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "sass": "1.93.2",
    "sass-loader": "16.0.5",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1",
    "webpack-merge": "6.0.1"
  },
  "dependencies": {
    "tailwindcss": "^4.1.13"
  },
  "targets": {
    "default": {
      "distDir": "./wwwroot"
    }
  },
  "parcel-namer-rewrite": {
    "hashing": "never",
    "rules": {
      "(.*).css": "$1.css",
      "(.*).js": "$1.js"
    }
  }
}
